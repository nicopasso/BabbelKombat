<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.nicopasso.babbelkombat.customviews.BKTextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/words_textview"
    android:textSize="30sp"
    android:textColor="@color/colorAccent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
  />

  <com.nicopasso.babbelkombat.customviews.BKTextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ranking_textview"
    android:textSize="30sp"
    android:textColor="@color/colorAccent"
    android:layout_marginTop="24dp"
    android:layout_marginStart="16dp"
  />

  <com.nicopasso.babbelkombat.customviews.BKButton android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="24dp"
    android:text="@string/back_to_homepage"
    android:padding="8dp"
    android:textSize="24sp"
    android:id="@+id/back_homepage_btn"
    android:layout_marginBottom="24dp"
  />

</LinearLayout>